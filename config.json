{
    "path": "html/",
    "tracker": {
	"osm_api_url": "https://api.openstreetmap.org",
	"geojsondiff-filename": "cset-{id}.json",
	"bounds-filename": "cset-{id}.bounds",
	"area-filter": "denmark.poly",
	"history": "5 minutes ago",
	"max_threads": 1,
	"horizon_type": "sliding",
	"horizon_hours": 48,
	"refresh_meta_minutes": 10,
	"template_path": "templates"
    },
    "backends": [
	{
	    "type": "BackendDetailed",
	    "print_meta": false
	},
	{
	    "type": "BackendHtml",
	    "show_details": true,
	    "show_comments": true,
	    "path": "",
	    "filename" : "today.html",
	    "filename_old" : "yesterday.html",
	    "template": "changeset.html"
	},
	{
	    "type": "BackendHtml",
	    "path": "",
	    "filename" : "notes.html",
	    "filename_old" : "notes-yesterday.html",
	    "template": "notes.html"
	},
	{
	    "type": "BackendHtmlSummary",
	    "filename" : "today-summ.html",
	    "template": "summary.html"
	},
	{
	    "type": "BackendGeoJson",
	    "filename" : "today.json",
	    "click_url": "http://osm.expandable.dk/diffmap.html?cid={cid}"
	}
    ]
}
